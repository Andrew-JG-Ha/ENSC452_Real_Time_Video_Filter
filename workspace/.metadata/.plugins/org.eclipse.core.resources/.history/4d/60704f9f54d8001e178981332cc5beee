/*
 * audio_recorder.c
 *
 * Main source file. Contains main() function.
 */
#include "Real_Time_Video_Filter.h"

/* ---------------------------------------------------------------------------- *
 * 									main()										*
 * ---------------------------------------------------------------------------- *
 * ---------------------------------------------------------------------------- */
int main(void)
{
	int status;
	audioArray = (u32*) 0x018E0000;
	audioUpperBound = (u32*) 0x018E0000 + 2*NUM_SECONDS*192000*sizeof(u32);

	xil_printf("Entering Main\r\n");
	//Configure the IIC data structure
	IicConfig(XPAR_XIICPS_0_DEVICE_ID);
	xil_printf("IIC Configured\r\n");

	/* Initialise GPIO peripheral */
	gpio_init();

	xil_printf("GPIO peripheral configured\r\n");

	// Initialize interrupt controller
	status = IntcInitFunction(INTC_DEVICE_ID, &TMRInst, &BTNInst);
	if(status != XST_SUCCESS) return XST_FAILURE;

	while(1);
    return 1;
}
